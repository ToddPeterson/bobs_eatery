<Window x:Class="EateryUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EateryUI"
        mc:Ignorable="d"
        FontSize="18"
        FontFamily="Montserrat"
        Title="Bob's Awesome Eatery" Height="566.4" Width="910.4" WindowState="Maximized" WindowStyle="ToolWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="lbxOutput" Grid.Row="1" HorizontalAlignment="Left" Height="266"  VerticalAlignment="Top" Width="904" SelectionChanged="LbxOutput_SelectionChanged"/>
        <TabControl HorizontalAlignment="Left" Grid.Row="0" Height="266" VerticalAlignment="Top" Width="904">
            <TabItem Header="Employee">
                <Grid>
                    <Button x:Name="btnShowEmployees" Content="Show Employees" HorizontalAlignment="Left" Margin="10,98,0,0" VerticalAlignment="Top" Width="167" Height="48" Click="BtnShowEmployees_Click" RenderTransformOrigin="0.375,0.983"/>
                    <Button x:Name="btnCreateEmployee" Content="Add Employee" HorizontalAlignment="Left" Margin="682,96,0,0" VerticalAlignment="Top" Width="206" Height="50" RenderTransformOrigin="6.474,-3.967"/>
                    <TextBlock Text="Bob's Awesome Eatery" FontSize="24" Margin="316,25,330.4,85"/>
                </Grid>
            </TabItem>
            <TabItem Header="Customer">
                <Grid>
                    <Button x:Name="btnShowCustomers" Content="Show Customers" HorizontalAlignment="Left" Margin="10,109,0,0" VerticalAlignment="Top" Width="163" Height="37" Click="BtnShowCustomers_Click"/>
                    <TextBlock Text="Bob's Awesome Eatery" FontSize="24" Margin="321,25,331.4,84"/>
                    <Button x:Name="btnCreateCustomer" Content="Add Customer" HorizontalAlignment="Left" Margin="682,96,0,0" VerticalAlignment="Top" Width="206" Height="50" RenderTransformOrigin="6.474,-3.967"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
