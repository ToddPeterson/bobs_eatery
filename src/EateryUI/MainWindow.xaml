<Window x:Class="EateryUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EateryUI"
        mc:Ignorable="d"
        FontSize="18"
        FontFamily="Segoe UI"
        Title="Bob's Awesome Eatery" WindowStyle="ToolWindow">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width=".6*"/>
            <ColumnDefinition Width=".2*"/>
            <ColumnDefinition Width=".2*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="1" FontSize="24" VerticalAlignment="Center"><Run Text="Bob's Awesome Eatery"/></TextBlock>
        <TabControl x:Name="tabFormSelection"  Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" Padding="10" Margin="0 0 20 0" BorderBrush="Black" SelectionChanged="tabFormSelection_SelectionChanged">
            <TabItem Header="Employees" BorderBrush="Black">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <GroupBox Header="Does employee exist?" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="5" Padding="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="First Name:" Grid.Row="0" Grid.Column="0" Margin="0 0 10 0"/>
                            <TextBox x:Name="tbxEmployeeExistsFirstName" Grid.Row="0" Grid.Column="1" Margin="0 0 0 10"/>

                            <TextBlock Text="Last Name:" Grid.Row="1" Grid.Column="0" Margin="0 0 10 0"/>
                            <TextBox x:Name="tbxEmployeeExistsLastName" Grid.Row="1" Grid.Column="1"/>

                            <Button x:Name="btnEmployeeExists" Content="Search" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Padding="30 5" Margin="0 10 0 0" HorizontalAlignment="Left" Click="btnEmployeeExists_Click" />
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="Search for name containing" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="5" Padding="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Text:" Grid.Row="0" Grid.Column="0" Margin="0 0 10 0"/>
                            <TextBox x:Name="tbxEmployeeSubstring" Grid.Row="0" Grid.Column="1"/>
                            <Button x:Name="btnSearchBySubstring" Content="Search" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Padding="30 5" HorizontalAlignment="Left" Margin="0 10 0 0" Click="btnSearchBySubstring_Click"/>
                        </Grid>
                    </GroupBox>
                    <Button x:Name="btnShowEmployees" Grid.Row="5" Grid.Column="0" Content="Show All" Padding="30 5" Margin="0 10 0 0" Click="BtnShowEmployees_Click"/>
                </Grid>
            </TabItem>
            <TabItem Header="Customers" BorderBrush="Black">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <GroupBox Header="Search by Date" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="5" Padding="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Purchase Date:" Grid.Row="0" Grid.Column="0" Margin="0 0 10 0"/>
                            <DatePicker x:Name="dpSproc9" Grid.Row="0" Grid.Column="1" Margin="0 0 0 10"/>


                            <Button x:Name="btnSearchSproc9" Content="Search" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Padding="30 5" Margin="0 10 0 0" HorizontalAlignment="Left" Click="btnSearchSproc9_Click"/>
                        </Grid>
                    </GroupBox>
                    <Button x:Name="btnShowCustomers" Grid.Column="0" Content="Show Customers" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Height="50" Click="BtnShowCustomers_Click"/>
                </Grid>
            </TabItem>

            <TabItem Header="Orders" BorderBrush="Black">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <GroupBox Header="Search by Customer" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="5" Padding="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="First Name:" Grid.Row="0" Grid.Column="0" Margin="0 0 10 0"/>
                            <TextBox x:Name="tbxOrderCustomerFirstName" Grid.Row="0" Grid.Column="1" Margin="0 0 0 10"/>

                            <TextBlock Text="Last Name:" Grid.Row="1" Grid.Column="0" Margin="0 0 10 0"/>
                            <TextBox x:Name="tbxOrderCustomerLastName" Grid.Row="1" Grid.Column="1"/>

                            <Button x:Name="btnOrderSearchByCustomer" Content="Search" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Padding="30 5" Margin="0 10 0 0" HorizontalAlignment="Left" Click="btnOrderSearchByCustomer_Click"/>
                        </Grid>
                    </GroupBox>
                    <Button x:Name="btnShowOrders" Grid.Row="5" Grid.Column="0" Content="Show All" Padding="30 5" Margin="0 10 0 0" Click="btnShowOrders_Click"/>
                </Grid>
            </TabItem>

            <TabItem Header="Menu Items" BorderBrush="Black">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <GroupBox Header="Search by Customer" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="5" Padding="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Start Date:" Grid.Row="0" Grid.Column="0" Margin="0 0 10 0"/>
                            <DatePicker x:Name="dpSproc10StartDate" Grid.Row="0" Grid.Column="1" Margin="0 0 0 10"/>

                            <TextBlock Text="End Date:" Grid.Row="1" Grid.Column="0" Margin="0 0 10 0"/>
                            <DatePicker x:Name="dpSproc10EndDate" Grid.Row="1" Grid.Column="1"/>

                            <Button x:Name="btnEntreeSearchSproc10" Content="Search" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Padding="30 5" Margin="0 10 0 0" HorizontalAlignment="Left" Click="btnEntreeSearchSproc10_Click"/>
                        </Grid>
                    </GroupBox>
                    <Button x:Name="btnShowMenuItems" Grid.Row="6" Grid.Column="0" Content="Show All" Padding="30 5" Margin="0,179,0,2" Click="btnShowMenuItems_Click"/>
                    <GroupBox Header="Search by Year" HorizontalAlignment="Left" Height="77" Grid.Row="6" VerticalAlignment="Top" Width="391" Grid.ColumnSpan="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="76*"/>
                                <ColumnDefinition Width="303*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <Label x:Name="lblYearSearch" Content="Year:" Grid.Column="1" HorizontalAlignment="Left" Margin="26,6,0,0" Grid.Row="2" VerticalAlignment="Top"/>
                            <TextBox x:Name="txtYearSearch" Grid.Column="2" HorizontalAlignment="Left" Height="28" Margin="3,12,0,0" TextWrapping="Wrap" Text="Enter Year" VerticalAlignment="Top" Width="120" Grid.Row="2"/>
                            <Button x:Name="btnYearSearch" Content="Search" Grid.Column="2" HorizontalAlignment="Left" Margin="144,11,0,0" Grid.Row="2" VerticalAlignment="Top" Width="75" Click="btnYearSearch_Click"/>


                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Header="City" BorderBrush="Black" Margin="-2,-2,6,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <GroupBox Header="City, Zip, State" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="5" Padding="10" Margin="0,0,0,164" Grid.RowSpan="3">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="City:" Grid.Row="0" Grid.Column="0" Margin="0 0 10 0"/>
                            <TextBox x:Name="txtCitySproc8" Grid.Row="0" Grid.Column="1" Margin="0 0 0 10" TextChanged="OrderCustomerFirstName_TextChanged"/>

                            <TextBlock Text="Zip:" Grid.Row="1" Grid.Column="0" Margin="0 0 10 0"/>
                            <TextBox x:Name="txtZipSproc8" Grid.Row="1" Grid.Column="1"/>

                            <TextBlock Text="State:" Grid.Row="2" Grid.Column="0" Margin="0,10,10,-10"/>
                            <TextBox x:Name="txtStateSproc8" Grid.Row="2" Grid.Column="1" Margin="0,10"/>

                            <Button x:Name="btnSproc8" Content="Associate/Add" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Padding="30 5" Margin="0,57,0,-47" HorizontalAlignment="Left" Click="btnSproc8_Click"/>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
        </TabControl>

        <ListBox x:Name="lbxOutput" Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" SelectionChanged="LbxOutput_SelectionChanged" BorderBrush="Black"/>
        <Button x:Name="btnCreate" Grid.Column="2" Grid.Row="2" Content="Create" Margin="0 10 10 0" Click="btnCreate_Click"/>
        <Button x:Name="btnEdit" Grid.Column="3" Grid.Row="2" Content="Edit" Margin="10 10 0 0" Click="btnEdit_Click"/>
        <GroupBox Header="Orders Under a Given Quantity" HorizontalAlignment="Left" Height="100" Margin="10,287,0,0" Grid.Row="1" VerticalAlignment="Top" Width="392" Grid.Column="1">
            <Grid HorizontalAlignment="Left" Height="74" Margin="10,0,-2,-5" VerticalAlignment="Top" Width="372" RenderTransformOrigin="0.742,-0.092">
                <DatePicker x:Name="dpSproc14Start" HorizontalAlignment="Left" Margin="227,8,0,0" VerticalAlignment="Top"/>
                <DatePicker x:Name="dpSproc14End" HorizontalAlignment="Left" Margin="227,40,0,0" VerticalAlignment="Top"/>
                <Label Content="Start:" HorizontalAlignment="Left" Margin="175,7,0,0" VerticalAlignment="Top"/>
                <Label Content="End:" Margin="175,40,145,2"/>
                <TextBox x:Name="txtSproc14" HorizontalAlignment="Left" Height="26" Margin="38,11,0,0" TextWrapping="Wrap" Text="Quantity" VerticalAlignment="Top" Width="75"/>
                <Button x:Name="btnSproc14" Content="Search" HorizontalAlignment="Left" Margin="38,37,0,0" VerticalAlignment="Top" Width="75" Click="btnSproc14_Click"/>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
