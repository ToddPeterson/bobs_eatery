<Window x:Class="EateryUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EateryUI"
        mc:Ignorable="d"
        FontSize="18"
        FontFamily="Segoe UI"
        Title="Bob's Awesome Eatery" WindowStyle="ToolWindow">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width=".6*"/>
            <ColumnDefinition Width=".2*"/>
            <ColumnDefinition Width=".2*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="1" Text="Bob's Awesome Eatery" FontSize="24" VerticalAlignment="Center"/>
        <TabControl x:Name="tabFormSelection"  Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" Padding="10" Margin="0 0 20 0" BorderBrush="Black">
            <TabItem Header="Employees" BorderBrush="Black">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="btnShowEmployees" Grid.Row="0" Grid.Column="0" Content="Show Employees" HorizontalAlignment="Center"  VerticalAlignment="Center" Width="200" Height="50" Click="BtnShowEmployees_Click" RenderTransformOrigin="0.375,0.983"/>
                    <!--<Button x:Name="btnCreateEmployeer" Grid.Row="0" Grid.Column="2" Content="Add Employee" HorizontalAlignment="Center"  VerticalAlignment="Center" Width="200" Height="50" RenderTransformOrigin="6.474,-3.967" Click="BtnCreateEmployee_Click"/>-->
                </Grid>
            </TabItem>
            <TabItem Header="Customers" BorderBrush="Black">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="btnShowCustomers" Grid.Column="0" Content="Show Customers" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Height="50" Click="BtnShowCustomers_Click"/>
                    <!--<Button x:Name="btnCreateCustomer" Grid.Column="2" Content="Add Customer" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Height="50" RenderTransformOrigin="6.474,-3.967" Click="BtnCreateCustomer_Click"/>-->
                </Grid>
            </TabItem>
            <TabItem Header="Other" BorderBrush="Black">
                
            </TabItem>
        </TabControl>
        
        <ListBox x:Name="lbxOutput" Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" SelectionChanged="LbxOutput_SelectionChanged" BorderBrush="Black"/>
        <Button x:Name="btnCreate" Grid.Column="2" Grid.Row="2" Content="Create" Margin="0 10 10 0" Click="btnCreate_Click"/>
        <Button x:Name="btnEdit" Grid.Column="3" Grid.Row="2" Content="Edit" Margin="10 10 0 0"/>
    </Grid>
</Window>
