<Window x:Class="EateryUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EateryUI"
        mc:Ignorable="d"
        FontSize="18"
        FontFamily="Montserrat"
        Title="Bob's Awesome Eatery" Height="566.4" Width="910.4" WindowState="Maximized" WindowStyle="ToolWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.25*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="1" Text="Bob's Awesome Eatery" FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TabControl Margin="0,0,0,0.2" Grid.ColumnSpan="3" Grid.Row="1">
            <TabItem Header="Employee">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="btnShowEmployees" Grid.Row="0" Grid.Column="0" Content="Show Employees" HorizontalAlignment="Center"  VerticalAlignment="Center" Width="200" Height="50" Click="BtnShowEmployees_Click" RenderTransformOrigin="0.375,0.983"/>
                    <Button x:Name="btnCreateEmployeer" Grid.Row="0" Grid.Column="2" Content="Add Employee" HorizontalAlignment="Center"  VerticalAlignment="Center" Width="200" Height="50" RenderTransformOrigin="6.474,-3.967" Click="BtnCreateEmployee_Click"/>
                </Grid>
            </TabItem>
            <TabItem Header="Customer">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="btnShowCustomers" Grid.Column="0" Content="Show Customers" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Height="50" Click="BtnShowCustomers_Click"/>
                    <Button x:Name="btnCreateCustomer" Grid.Column="2" Content="Add Customer" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Height="50" RenderTransformOrigin="6.474,-3.967" Click="BtnCreateCustomer_Click"/>
                </Grid>
            </TabItem>
            <TabItem Header="Others">
                
            </TabItem>
        </TabControl>
        <ListBox x:Name="lbxOutput" Grid.Row="2" Grid.ColumnSpan="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" SelectionChanged="LbxOutput_SelectionChanged"/>
    </Grid>
</Window>
